{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sc-onboarding/shape-of-toys/canvas": [
        "libs/shape-of-toys/canvas/src/index.ts"
      ],
      "@sc-onboarding/shape-of-toys/selected-items": [
        "libs/shape-of-toys/selected-items/src/index.ts"
      ],
      "@sc-onboarding/shape-of-toys/store": [
        "libs/shape-of-toys/store/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
